#include <iostream>
#include <string>
using namespace std;


int calculate(int int1, int int2, string str) {

    int total = 0;

    if (str == "+") {
        total = int1 + int2;
    } else if (str == "-") {
        total = int1 - int2;
    } else if (str == "*") {
        total = int1 * int2;
    } else if (str == "/") {
        total = int1 / int2;

    }

    return main();
    return total;

}

int main() {
    cout << "Simple Calcualtor!\n";
    cout << "Use 'x' '-' '*' '/'\n";
    int num1;
    int num2;
    string space = " ";
    string sign;
    cin >> num1 >> sign >> num2;

    int result = calculate(num1, num2, sign);
    cout << "Answer: " << result << endl;
    return 0;
}
